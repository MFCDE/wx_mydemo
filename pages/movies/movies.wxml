<import src="movie-list-template/movie-list-template.wxml"/>

<view class="container">
    <view class="search">
        <icon type="search" class="search-img" size="13" color="#405f80"></icon>
        <input type="text" placeholder="哈哈哈哈哈" placeholder-class="placeholder" bindfocus="onBindFocus"
               bindchange="onBindChange"/>
    </view>
    <block wx:if="{{isShow}}">
        <view class="movie-template">
            <template is="movieListTemplate" data="{{...theaters}}"/>
        </view>
        <view class="movie-template">
            <template is="movieListTemplate" data="{{...comingSoon}}"/>
        </view>
        <view class="movie-template">
            <template is="movieListTemplate" data="{{...top250}}"/>
        </view>
        <block wx:else>
            <view class="search-pannel">
                <template name="movieGridTemplate"/>
            </view>
        </block>
    </block>
</view>
